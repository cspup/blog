<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="yemu.mapper.ImgMapper">
    <!--    User对象与user表之间的映射方式-->
    <resultMap id="imgResultMap" type="yemu.domain.Img">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="uri" property="uri" jdbcType="VARCHAR"/>
        <result column="annotation" property="annotation" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getById" parameterType="int" resultMap="imgResultMap">
        select
        id,name,uri,annotation
        from img
        where id=#{id}
    </select>
    <insert id="addImg" parameterType="yemu.domain.Img" useGeneratedKeys="true" keyProperty="id">
        insert into img
        (name,uri,annotation)
        values
        (#{name},#{uri},#{annotation});
    </insert>

</mapper>