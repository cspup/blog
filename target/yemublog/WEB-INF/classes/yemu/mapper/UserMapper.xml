<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="yemu.mapper.UserMapper">
<!--    User对象与user表之间的映射方式-->
    <resultMap id="userResultMap" type="yemu.domain.User">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="account" property="account" jdbcType="VARCHAR"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="create_time" property="create_time" jdbcType="TIMESTAMP"/>
    </resultMap>

<!--    以id为条件查询User表-->
    <select id="getUserById" resultMap="userResultMap"
            parameterType="int">
        select
        id,account,name,password,create_time
        from user
        where id=#{id}
    </select>
    <select id="getUserByAccount" parameterType="String" resultMap="userResultMap">
        select
        id,account,name,password,create_time
        from user
        where account=#{account}
    </select>
    <select id="getUserByName" parameterType="String" resultMap="userResultMap">
        select
        id,account,name,password,create_time
        from user
        where name =#{name}
    </select>
    <insert id="insertUser" parameterType="yemu.domain.User" useGeneratedKeys="true" keyProperty="id">
        insert into user
         (account,name,password)
        values
        (#{account},#{name},#{password})
    </insert>
    <update id="update" parameterType="yemu.domain.User">
        update user
        <set>
            <if test="account != null">account=#{account},</if>
            <if test="name !=null">name=#{name},</if>
            <if test="password !=null">password=#{password}</if>
        </set>
        where id=#{id};
    </update>
    <delete id="deleteUser" parameterType="yemu.domain.User">
        delete from user where id=#{id};
    </delete>
    <select id="getCount" resultType="int">
        select count(*) from user;
    </select>
    <select id="getAll" resultType="yemu.domain.User">
        select * from user;
    </select>
    <delete id="delete" parameterType="int">
        delete from user
        where id=#{id};
    </delete>
</mapper>